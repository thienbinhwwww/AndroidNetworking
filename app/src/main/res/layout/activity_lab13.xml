<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    tools:context=".lab1.Lab11Activity">

  <ImageView
      android:id="@+id/img_demo13Ac"
      android:layout_width="120dp"
      android:layout_height="101dp"
      android:layout_marginTop="132dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher" />

  <TextView
      android:id="@+id/tv_demo13"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="51dp"
      android:text="Lab11"
      android:textColor="#FFFFFF"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/img_demo13Ac"
      app:layout_constraintStart_toStartOf="@+id/img_demo13Ac"
      app:layout_constraintTop_toBottomOf="@+id/img_demo13Ac" />

  <Button
      android:id="@+id/btn_demo13Ac"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="51dp"
      android:text="Button"
      android:textColor="#FFFFFF"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/tv_demo13"
      app:layout_constraintStart_toStartOf="@+id/tv_demo13"
      app:layout_constraintTop_toBottomOf="@+id/tv_demo13" />
  </androidx.constraintlayout.widget.ConstraintLayout>